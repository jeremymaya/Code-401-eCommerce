@page
@model dotnet_ECommerce.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}
<div class="container text-center">
    <h1 class="text-left">
        Products
    </h1>
    <div class="row">
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            @if (i % 3 == 0)
            {
                <div class="w-100"></div>
            }
        <div class="col">
            <img class="products" src="@Model.Products[i].Image" alt="...">
            <h5>@Model.Products[i].Name</h5>
            <p>$@Model.Products[i].Price</p>
        </div>
        }
    </div>
</div>