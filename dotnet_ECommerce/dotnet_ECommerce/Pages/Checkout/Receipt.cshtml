@page
@model dotnet_ECommerce.Pages.Checkout.ReceiptModel
@{
    ViewData["Title"] = "Receipt";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Receipt</h1>
    <div class="form-group row">
        <div class="container">
            <div class="card">
                <div class="card-header">
                    Invoice
                    <strong>@Model.CheckOut.Date</strong>
                    <span class="float-right"> <strong>Status:</strong> Processing</span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <h6 class="mb-3">From:</h6>
                            <div>
                                <strong>Tiny Plants</strong>
                            </div>
                            <div>1000 Tinyplants Road</div>
                            <div>Greens, TP, 71695</div>
                            <div>Email: orders@tinyplants.com</div>
                            <div>Phone: +55 300 277 5500</div>
                        </div>

                        <div class="col-sm-6">
                            <h6 class="mb-3">To:</h6>
                            <div>
                                <strong>@Model.CheckOut.FirstName @Model.CheckOut.LastName</strong>
                            </div>
                            <div>@Model.CheckOut.Address @Model.CheckOut.Address2</div>
                            <div>@Model.CheckOut.City, @Model.CheckOut.State, @Model.CheckOut.Zip</div>
                            <div>@Model.CheckOut.Email</div>
                            <div></div>
                        </div>

                    </div>

                    <div class="table-responsive-sm">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="center">#</th>
                                    <th>Item</th>
                                    <th>Product Number</th>

                                    <th class="right">Unit Cost</th>
                                    <th class="center">Qty</th>
                                    <th class="right">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="center">1</td>
                                    <td class="left strong">Product A</td>
                                    <td class="left">CACS001</td>

                                    <td class="right">$22.00</td>
                                    <td class="center">1</td>
                                    <td class="right">$22.00</td>
                                </tr>
                                <tr>
                                    <td class="center">1</td>
                                    <td class="left strong">Product B</td>
                                    <td class="left">CACS002</td>

                                    <td class="right">$18.00</td>
                                    <td class="center">1</td>
                                    <td class="right">$18.00</td>
                                </tr>
                                <tr>
                                    <td class="center">1</td>
                                    <td class="left strong">Product C</td>
                                    <td class="left">CACS003</td>

                                    <td class="right">$24.00</td>
                                    <td class="center">1</td>
                                    <td class="right">$24.00</td>
                                </tr>
                                <tr>
                                    <td class="center">1</td>
                                    <td class="left strong">Product D</td>
                                    <td class="left">CACS004</td>

                                    <td class="right">$15.00</td>
                                    <td class="center">1</td>
                                    <td class="right">$15.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-5">

                        </div>

                        <div class="col-lg-4 col-sm-5 ml-auto">
                            <table class="table table-clear">
                                <tbody>
                                    <tr>
                                        <td class="left">
                                            <strong>Payment Method</strong>
                                        </td>
                                        <td class="right">@Model.CheckOut.CreditCard</td>
                                    </tr>
                                    <tr>
                                        <td class="left">
                                            <strong>Subtotal</strong>
                                        </td>
                                        <td class="right">$79.00</td>
                                    </tr>
                                    <tr>
                                        <td class="left">
                                            <strong>Discount (0%)</strong>
                                        </td>
                                        <td class="right">$0.00</td>
                                    </tr>
                                    <tr>
                                        <td class="left">
                                            <strong>Tax (10%)</strong>
                                        </td>
                                        <td class="right">$7.90</td>
                                    </tr>
                                    <tr>
                                        <td class="left">
                                            <strong>Total</strong>
                                        </td>
                                        <td class="right">
                                            <strong>$86.90</strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>