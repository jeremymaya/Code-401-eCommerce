@page
@model dotnet_ECommerce.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

    <div class="container w-80">
        <h1>Login</h1>

        <form>
            <div asp-validation-summary="All"></div>
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Input.Email" type="email" class="form-control" id="inputEmail3" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input asp-for="Input.Password" type="password" class="form-control" id="inputPassword3" placeholder="Password">
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="gridCheck1">
                        <label asp-for="Input.RememberMe" class="form-check-label" for="gridCheck1"></label>
                    </div>
                </div>
            </div>
            <button type="submit">Login</button>
        </form>

        <a class="navbar-text" href="/Account/Register">Register</a>
    </div>
